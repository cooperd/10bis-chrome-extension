{
  "compilerOptions": {
    "experimentalDecorators": true,
    "keyofStringsOnly": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts*"
  ]
}
